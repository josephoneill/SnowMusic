    <attr name="ripple_background_circle"
        format="reference" />

    <attr name="ripple_background_color"
        format="reference|color" />

    <attr name="primary_theme_color"
        format="reference|color" />

    <attr name="secondary_theme_color"
        format="reference|color" />

    <attr name="main_song_text_color"
        format="reference|color" />

    <attr name="main_artist_text_color"
        format="reference|color" />

    <attr name="overflow_menu"
        format="reference" />

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
