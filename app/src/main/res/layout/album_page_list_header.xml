<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/album_page_header_view"
    android:clickable="true"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="?attr/ripple_background_rect"
    android:layout_height="90dp">

    <RelativeLayout
        android:id="@+id/album_page_header_view_clickable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/ripple_background_rect">

    <TextView
        android:layout_width="wrap_content"
        android:maxWidth="275dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:id="@+id/tv_album_page_title"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="275dp"
        android:textColor="@color/black"
        android:id="@+id/tv_album_page_artist"
        android:layout_marginLeft="17dp"
        android:layout_below="@id/tv_album_page_title"
        android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>