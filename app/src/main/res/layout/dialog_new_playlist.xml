<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:inputType="text"
        android:hint="@string/new_playlist"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        android:id="@+id/et_NewPlaylist" />

    <Button
        android:layout_below="@id/et_NewPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_save_playlist"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:background="?attr/ripple_background_rect"
        android:textColor="?attr/primary_theme_color"
        android:text="@string/save" />

</RelativeLayout>