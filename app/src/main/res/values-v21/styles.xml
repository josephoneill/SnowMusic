<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primary_material_skyblue</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/background_material_skyblue</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent_material_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
