        <item name="ripple_background_color">@color/ripple_skyblue</item>
        <item name="primary_theme_color">@color/primary_material_skyblue</item>
        <item name="secondary_theme_color">@color/background_material_skyblue</item>
        <item name="main_song_text_color">@color/white</item>
        <item name="main_artist_text_color">@color/gray</item>
        <item name="overflow_menu">@drawable/ic_menu_moreoverflow_material_light</item>
        <item name="android:dialogTheme">@style/CustomDialog</item>
    </style>

